<!-- views/login.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Login - Bhutan Budget</title>
  <link rel="stylesheet" href="/css/auth.css"/>
</head>
<body>
  <div class="auth-container">
    <div class="auth-form">
      <h1>Welcome Back</h1>

      <% if (message && message.length) { %>
        <div class="alert alert-error"><%= message %></div>
      <% } %>

      <% if (success_msg && success_msg.length) { %>
        <div class="alert alert-success"><%= success_msg %></div>
      <% } %>

      <form action="/auth/login" method="POST" data-validate>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" required />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" required />
        </div>
        <button type="submit" class="auth-btn">Login</button>
      </form>

      <p class="auth-link">Don't have an account? <a href="/auth/signup">Sign up</a></p>
      <p class="auth-link"><a href="/auth/forgot-password">Forgot password?</a></p>
    </div>
  </div>
</body>
</html>
